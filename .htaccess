# ----------------------------------------------------------------------
# Força HTTPS + www
# ----------------------------------------------------------------------
RewriteEngine On

# Se não for HTTPS ou não tiver www, redireciona
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP:X-Forwarded-Proto} !https [NC]
RewriteRule ^ https://www.tcg-collectors.com%{REQUEST_URI} [R=301,L]

RewriteCond %{HTTP_HOST} !^www\.innovatech-zone\.com$ [NC]
RewriteRule ^ https://www.tcg-collectors.com%{REQUEST_URI} [R=301,L]

# ----------------------------------------------------------------------
# Landing page durante manutenção (200 OK)
# ----------------------------------------------------------------------
# Permitir acesso ao back-office (troca adminXYZ pela tua pasta real)
RewriteRule ^adminXYZ/ - [L]

# Permitir assets da landing
RewriteCond %{REQUEST_URI} ^/(maintenance\.html|assets/|css/|js/|img/|fonts/) [NC]
RewriteRule ^ - [L]

# Tudo o resto mostra a landing (200 OK)
# (alvo relativo, sem barra inicial)
RewriteRule ^.*$ maintenance.html [L]

# ----------------------------------------------------------------------
# Segurança básica
# ----------------------------------------------------------------------
<IfModule mod_headers.c>
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
  Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# ----------------------------------------------------------------------
# Compressão Brotli / Gzip
# ----------------------------------------------------------------------
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/css application/javascript application/json application/xml image/svg+xml
</IfModule>
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json application/xml image/svg+xml
</IfModule>

# ----------------------------------------------------------------------
# Caching
# ----------------------------------------------------------------------
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 day"

  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"

  ExpiresByType image/avif "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType image/x-icon "access plus 1 year"

  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType font/woff  "access plus 1 year"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(?:html)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  <FilesMatch "\.(?:css|js)$">
    Header set Cache-Control "public, max-age=604800"
  </FilesMatch>

  <FilesMatch "\.(?:png|jpe?g|gif|webp|avif|svg|ico)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  <FilesMatch "\.(?:woff2?|otf|ttf)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

# ----------------------------------------------------------------------
# Desativa listagem de diretórios
# ----------------------------------------------------------------------
Options -Indexes
